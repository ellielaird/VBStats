<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerNumber"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="25"
            android:textSize="40sp"
            android:textAlignment="center"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="swing"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/swingButton"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="kill"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/killButton"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="error"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/errorButton"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="assist"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/assistButton"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Spinner
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:id="@+id/subSpinner"
            />



        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="Ace"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/aceButton"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="SE"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/seButton"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:text="Dig"
            android:textSize="10dp"
            android:backgroundTint="#66ccff"
            android:layout_marginLeft="25dp"
            android:id="@+id/digButton"/>


        <Spinner
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/srSpinner"
            />



    </LinearLayout>




</LinearLayout>
